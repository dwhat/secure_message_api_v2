<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Cipher</th>
      <th>Iv</th>
      <th>Key recipient enc</th>
      <th>Sig recipient</th>
      <th>Timestamp</th>
      <th>Recipient</th>
      <th>Sig service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender %></td>
        <td><%= message.cipher %></td>
        <td><%= message.iv %></td>
        <td><%= message.key_recipient_enc %></td>
        <td><%= message.sig_recipient %></td>
        <td><%= message.timestamp %></td>
        <td><%= message.recipient %></td>
        <td><%= message.sig_service %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

